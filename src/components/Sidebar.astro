    {
      steps.map((step, index) => {
        return (
          <div class='inline-flex justify-center items-center gap-5'>
            <div
              data-step-status
              class='w-10 p-2 text-center border rounded-full text-white'
            >
              {index + 1}
            </div>
            <div>
              <span class='text-cool-gray'>Step {index + 1}</span>
              <h1 class='text-white font-bold text-xl'>{step}</h1>
            </div>
          </div>
        );
      })
    }
  </div>
</nav>

